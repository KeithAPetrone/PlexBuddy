@page "/"
@using PlexBuddy.Shared
@inject HttpClient Http

<PageTitle>PlexBuddy | Admin</PageTitle>

<div class="container mt-4">
    <h2 class="text-white mb-4">Request Queue</h2>

    @if (wishlist == null)
    {
        <div class="spinner-border text-warning" role="status"></div>
    }
    else if (!wishlist.Any())
    {
        <div class="alert alert-secondary">No requests yet. Tell your friends to get searching!</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                <tr>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Requested By</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in wishlist)
                {
                    <tr>
                        <td><img src="@item.PosterUrl" width="50" alt="poster" /></td>
                        <td>@item.Title (@item.Year)</td>
                        <td>@item.PlexUserId</td>
                        <td>
                            <span class="badge bg-primary">@item.Status</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-success">Mark Available</button>
                            <button class="btn btn-sm btn-danger">Remove</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<MediaItem>? wishlist;

    protected override async Task OnInitializedAsync()
    {
        // This hits the [HttpGet("all")] endpoint in your WishlistController
        wishlist = await Http.GetFromJsonAsync<List<MediaItem>>("api/wishlist/all");
    }
}